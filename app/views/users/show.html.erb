<div class="jumbotron jumbotron-fluid jumbo-show text-center">
<div class="container justify-content-center">
  <h1 class="display-3 text-light">Mon profil</h1>
  </div>
</div>
<p id="notice"><%= notice %></p>

<div class="popo">
  <div class="card" style="width: 30rem;">
    <div class="card-header">
        Mes informations
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <strong>Email :</strong>
        <%= @user.email %>
      </li>

      <li class="list-group-item">
        <strong>Prénom :</strong>
        <%= @user.first_name %>
      </li>

      <li class="list-group-item">
        <strong>Nom :</strong>
        <%= @user.last_name %>
      </li>
      
      <li class="list-group-item">
      <strong>Description :</strong>
      <%= @user.description%>
      </li>

    </ul>
  </div>
</div>

<div class="bottom-btn">
  <button type="button" class="btn btn-primary"><%= link_to "Changer mon mot de passe", edit_user_registration_path(@user)%></button> 
  <button type="button" class="btn btn-primary"><%= link_to "Modifier mes informations", edit_user_path(@user) %></button>
</div>
