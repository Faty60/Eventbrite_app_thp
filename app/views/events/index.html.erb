<div class="jumbotron jumbotron-fluid jumbo-index text-center">
  <div class="container justify-content-center">
    <h1 class="display-3 text-light">Bienvenue sur Eventbrite</h1>
    <p class="lead">Découvrez de nouveaux évènements ou créez les vous-mêmes !</p>
  </div>
</div>
  <BR>

  <div class="container mt-5">
  <div class="row cols-3 justify-content-center">
    <%@events.each do |e|%>
      <div class="card" style="width: 20rem; margin-left: 1rem; margin-bottom: 1rem;">
        <div class="card-title mt-2 ml-2">
          <h3>
            <%=e.title%>
          </h3>
        </div>
        <div class="card-body">
          <div class="card-text">
            <%=e.description%>
          </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <strong>Lieu</strong>
                <p><%=e.location%></p>
              </li>
              <li class="list-group-item">
                <strong>Durée</strong>
                <p><%=e.duration%> minutes</p>
              </li>
              <li class="list-group-item">
                <strong>Prix</strong>
                <p><%=e.price%> €</p>
              </li>
            </ul>
            <a class="btn btn-primary" href=<%=event_path(e.id)%>>Voir</a>
        </div>
      </div>
    <%end%>
  </div>
</div>

