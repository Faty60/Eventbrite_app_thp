<div class="jumbotron jumbotron-fluid jumbo-event-show text-center">
<div class="container justify-content-center">
  <h1 class="display-3 text-light">Mon Evènement</h1>
  </div>
</div>
<p id="notice"><%= notice %></p>

<div class="popo">
  <div class="card text-center" style="width: 40rem;">
    <div class="card-header">
        Mon évènement
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <strong>Titre :</strong>
        <%= @event.title %>
      </li>

      <li class="list-group-item">
        <strong>Description :</strong>
        <%= @event.description %>
      </li>

      <li class="list-group-item">
        <strong>Date de l'évènement :</strong>
        <%= @event.start_date %>
      </li>
      
      <li class="list-group-item">
      <strong>Durée de l'évènement :</strong>
      <%= @event.duration%> minutes
      </li>

      <li class="list-group-item">
      <strong>Lieu :</strong>
      <%= @event.location%>
      </li>

      <li class="list-group-item">
      <strong>Prix (en €) :</strong>
      <%= @event.price%>
      </li>

    </ul>
  </div>
</div>


<br>
<button type="button" class="btn btn-secondary"><%= link_to "Retour à l'accueil", root_path %></button>
